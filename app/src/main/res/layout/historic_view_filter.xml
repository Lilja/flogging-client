<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/historic_view_filter_layout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <LinearLayout
       android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
            <EditText
                android:id="@+id/historic_view_filter_start_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
          <ImageView
              android:id="@+id/historic_view_filter_start_date"
               android:src="@mipmap/ic_date_range_black_24dp"
               android:layout_width="20dp"
               android:layout_height="20dp" />
            <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/historic_view_filter_end_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/historic_view_filter_end_date"
               android:src="@mipmap/ic_date_range_black_24dp"
               android:layout_width="20dp"
               android:layout_height="20dp" />
       </LinearLayout>

   </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/historic_view_filter_chronological_order"
                android:text="Chronological Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
       </LinearLayout>
    </RelativeLayout>
</LinearLayout>